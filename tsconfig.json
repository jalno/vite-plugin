{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "rootDir": "src",
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./dist",
        "strict": true,
        "skipLibCheck": true,
        "noEmitOnError": true,
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}